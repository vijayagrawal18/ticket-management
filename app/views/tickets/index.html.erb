<p id="notice"><%= notice %></p>

<h1>Tickets</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Url</th>
      <th>External</th>
      <th>Type</th>
      <th>Subject</th>
      <th>Description</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Submitter</th>
      <th>Assignee</th>
      <th>Organization</th>
      <th>Has incidents</th>
      <th>Due at</th>
      <th>Via</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket._id %></td>
        <td><%= link_to "url", ticket.url %></td>
        <td><%= ticket.external_id %></td>
        <td><%= ticket.ticket_type %></td>
        <td><%= ticket.subject %></td>
        <td><%= ticket.description %></td>
        <td><%= ticket.priority %></td>
        <td><%= ticket.status %></td>
        <td><%= ticket.submitter.name %></td>
        <td><%= ticket.assignee&.name || "Unassigned"  %></td>
        <td><%= ticket.organization&.name %></td>
        <td><%= ticket.has_incidents %></td>
        <td><%= ticket.due_at %></td>
        <td><%= ticket.via %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>
<%= paginate @tickets %>
