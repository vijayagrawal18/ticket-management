<h1>Organizations</h1>

<%= render 'shared/flash_notifications' %>
<%= render 'shared/search_bar' %>

<% if @organizations.exists? %>
  <table>
    <thead>
      <tr>
        <th>Id</th>
        <th>Url</th>
        <th>External</th>
        <th>Name</th>
        <th>Details</th>
        <th>Shared Tickets</th>
        <th>Tags</th>
        <th>Domains</th>
        <th>Users</th>
        <th>Tickets</th>
        <th>Created At</th>
      </tr>
    </thead>

    <tbody>
      <% @organizations.each do |organization| %>
        <tr>
          <td><%= organization._id %></td>
          <td><%= link_to :url, organization.url %></td>
          <td><%= organization.external_id %></td>
          <td><%= organization.name %></td>
          <td><%= organization.details %></td>
          <td><%= organization.shared_tickets %></td>
          <td><%= organization.tags.pluck(:name).join(", ") %></td>
          <td><%= organization.domains.pluck(:name).join(", ") %></td>
          <td><%= link_to organization.users_count,  users_path(field: :organization, value: organization.name)%></td>
          <td><%= link_to organization.tickets_count,  tickets_path(field: :organization, value: organization.name)%></td>
          <td><%= organization.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="no-records notification alert">
    No organizations available for given input.
  </div>
<% end %>

<br/>
<%= paginate @organizations %>
